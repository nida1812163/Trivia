<!DOCTYPE html>
<html>
  <head>
    <% include partials/head %>  <!-- we are including partial views-->
  </head>
  <body>

    <% include partials/menu %>

    <div class ="container-fluid bg-3 text-center">
      <h3><%= page %></h3>
      <br>

    <div class="row">
      <table class = 'table table-striped table-responsive-md btm-table'>
        <thead>
            <tr>
              <th>Vehicle Name</th>
              <th>Number</th>
            </tr>
        </thead>
        <tbody>
          <%Vehicle.forEach(function(Vehicle){ %>  <!--products array is used, which was created form the list function in the controller when we accessed /list-->
            <tr>
              <td><%= Vehicle.vehicleName %></td>
              <td><%= Vehicle.number %></td>
            
              <td>
                <form action='updateform/<%=vehicle[i]._id %>' method="POST">
                  <button type= "submit">Update</button>
                </form>
              </td>
              <td>
                <form action='<%=vehicle[i]._id %>/delete' method="POST">
                  <button type= "submit">Delete</button>
                </form>
              </td>
            
            </tr>
        <% }); %>
      </tbody>
    </table>
      
</div>
</div>
</body>
<% include partials/script %>
</html>